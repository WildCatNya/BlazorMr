@page "/author"

@using Microsoft.EntityFrameworkCore

@inject IUnitOfWork Unit

<a href="/author/add" class="btn btn-primary mb-4">Добавить</a>

@if (Authors is null)
{
    <p><em>Загрузка...</em></p>
}
else if (Authors.Count == 0)
{
    <p><em>Данных нет.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Authors)
            {
                <tr class="align-middle">
                    <td>@author.Id</td>
                    <td>
                        <a href="@author.Href">@author.Name</a>
                    </td>
                    <td>
                        <ActionButtons PagePath="author" ModelId="@author.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Author> Authors;

    protected override async Task OnInitializedAsync()
    {
        Authors = await Unit.AuthorRepository.GetAllAsync(true);
    }
}