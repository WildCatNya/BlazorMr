@*@page "/"*@
@page "/oldindex"

@using Microsoft.EntityFrameworkCore

@inject IDbContextFactory<MediaContext> DbFactory

@if (Videos is null)
{
    <p><em>Загрузка данных...</em></p>
}
else if (Videos.Count == 0)
{
    <p><em>Данных нет</em></p>
}
else
{
    <select class="mb-3" @onchange="OnChange">
        <option value="0">Все (@Authors.Sum(x => x.Videos.Count))</option>
        @foreach (var author in Authors.OrderBy(x => x.Name))
        {
            <option value="@author.Id">@author.Name (@author.Videos.Count)</option>
        }
    </select>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var video in Videos)
        {
            <div class="col">
                <CardLayout Video="@video" />
            </div>
        }
    </div>
}

@code {
    private UnitOfWork _unitOfWork;

    private List<Video>? Videos;
    private List<Author>? Authors;

    protected override async Task OnInitializedAsync()
    {
        _unitOfWork = new(await DbFactory.CreateDbContextAsync());

        Videos = await _unitOfWork.Video.GetAllWithIncludesAsync();

        Authors = await _unitOfWork.Author.GetAllAsync();
    }
    private void OnChange(ChangeEventArgs e)
    {
        int id = e.Value.ToString().ToInt32();

        if (id == 0)
        {
            Videos = _unitOfWork.Video.GetAllWithIncludes();
            return;
        }

        Videos = _unitOfWork.Video.GetAllWithIncludes().Where(x => x.IdAuthor == id).ToList();
    }
}